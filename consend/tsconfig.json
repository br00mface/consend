{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@": [
                "src"
            ],
            "@/*": [
                "src/*"
            ],
        },
        "types": [
            "vite-plugin-pwa/client"
        ],
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker"
        ],
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/*.vue",
        "src/**/*.vue",
        "node_modules/vite-plugin-pwa/client.d.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "test",
        "test.ts",
        "**/*.spec.ts",
        "**/*.worker.ts"
    ],
    "plugins": [
        {
            "name": "@vuedx/typescript-plugin-vue"
        }
    ]
}